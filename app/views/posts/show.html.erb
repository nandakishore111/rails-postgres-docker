<p style="color: green; text-align: center;"><%= notice %></p>

<div style="display: flex; justify-content: center; align-items: center; height: 80vh;">
  <div style="max-width: 600px; padding: 20px; border: 1px solid #ccc; border-radius: 10px; text-align: center;">
    
    <%= render @post %>

    <div style="margin-top: 20px;">
      <%= link_to "Edit this post", edit_post_path(@post), style: "margin-right: 10px;" %>
      <%= link_to "Back to posts", posts_path %>
    </div>

    <div style="margin-top: 20px;">
      <%= button_to "Destroy this post", @post, method: :delete, data: { confirm: 'Are you sure?' }, style: "padding: 10px 20px;" %>
    </div>

  </div>
</div>
