<div id="<%= dom_id post %>" style="display: flex; justify-content: center; margin-bottom: 30px;">
  <div style="border: 1px solid #ccc; border-radius: 8px; padding: 20px; width: 500px;">
    <p><strong>Title:</strong> <%= post.title %></p>
    <p><strong>Body:</strong> <%= post.body %></p>
    <p style="text-align: right;">
      <%= link_to "Show this post", post, style: "color: #5b21b6;" %>
    </p>
  </div>
</div>
